@page
@model CineMania.Pages.contact.contacts

@{
    ViewData["Title"] = "contact page";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <title> my contact form</title>
</head>
<body>
<div class="mx-auto text-warning " >
    <h1 class=" text-warning text-center ">Contact Us</h1>
</div>
      
       <div class="row">
       <div class="col-md-3"></div>
         <div class="col-md-6">
             <div class="well well-sm">
                 <form method="post">
                     <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                     <div class="form-group">
                         <label asp-for="Contact.Names" class="control-label text-warning">Names:</label>
                         <input asp-for="Contact.Names" class="form-control" placeholder="please enter your names"/>
                         <span asp-validation-for="Contact.Names" class="text-danger"></span>
                     </div>   
                     <div class="form-group">
                         <label asp-for="Contact.Email" class="control-label text-warning" ></label>
                         <input asp-for="Contact.Email" class="form-control" placeholder="please enter your email"/>
                         <span asp-validation-for="Contact.Email" class="text-danger"></span>
                     </div>
                     <div class="form-group">
                         <label asp-for="Contact.Subject" class="control-label text-warning"></label>
                         <input asp-for="Contact.Subject" class="form-control" placeholder="please enter subject" />
                         <span asp-validation-for="Contact.Subject" class="text-danger"></span>
                     </div>
             
                     <div class="form-group">
                         <label asp-for="Contact.Comment" class="control-label text-warning" ></label>
                         <textarea asp-for="Contact.Comment" class="form-control" placeholder="please enter your message !!!!"></textarea>
                    
                         <span asp-validation-for="Contact.Comment" class="text-danger"></span>
                     </div>
                     <div class="  form-group">
                         <input type="submit" value="Send Message" class=" col-md-12 btn btn-primary" />
                     </div>
                 </form>
             </div>
         </div>
 </div>
</body>
</html>